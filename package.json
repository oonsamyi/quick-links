{
  "name": "quick-links",
  "version": "0.0.1",
  "author": "Utitsyn Oleg (https://t.me/oonsamyi)",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "debug": "rimraf dist && NODE_ENV=development nest start --debug --watch",
    "dev": "rimraf dist && NODE_ENV=development nest start --watch",
    "prod": "NODE_ENV=production npm run build && NODE_ENV=production node dist/server/main",
    "build": "rimraf dist && nest build && NEXT_BUILD=true next build src/client && npm run copy-gql-files",
    "analyze": "ANALYZE=true npm run build",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "ts:client": "npx tsc --project ./src/client/tsconfig.json",
    "ts:server": "npx tsc --project ./tsconfig.json",
    "ts": "npm run ts:client && npm run ts:server",
    "check": "npm run lint && npm run ts",
    "prettier": "prettier --write .",
    "gen-schema": "ts-node ./src/scripts/generateGraphqlSchema",
    "gen-types": "ts-node ./src/scripts/generateServerGraphqlTypes",
    "gen-api": "ts-node ./src/scripts/generateClientGraphqlApi",
    "gen": "npm run gen-schema && npm run gen-types && npm run gen-api",
    "copy-gql-files": "copyfiles -u 1 -f src/**/*.graphql dist/graphql"
  },
  "dependencies": {
    "@apollo/client": "^3.5.6",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.5",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^9.1.2",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/platform-express": "^8.0.0",
    "apollo-server-express": "^3.5.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.2",
    "classnames": "^2.3.1",
    "graphql": "^15.8.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.1.6",
    "nanoid": "^3.3.4",
    "next": "^12.0.7",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-toastify": "^8.1.1",
    "unstated-next": "^1.1.0"
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "^3.6.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@next/bundle-analyzer": "^12.0.8",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "babel-plugin-lodash": "^3.3.4",
    "colors": "^1.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "graphql-zeus": "^4.0.4",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-morph": "^13.0.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
